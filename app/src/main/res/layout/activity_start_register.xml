<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/free_speech_red"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context=".ui.StartRegisterActivity">


    <com.ydd.conference.custom.HuaWenTextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="上海十四届人大常委会第十九次会议"
        android:textColor="@color/broom"
        android:textSize="45sp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical">
        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/icon_user"
            android:visibility="gone"/>
        <com.ydd.conference.custom.HuaWenTextView
            android:id="@+id/personNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="某    某"
            android:textColor="@color/white"
            android:textSize="90sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">
        <com.ydd.conference.custom.HuaWenTextView
            android:id="@+id/registerStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/please_register"
            android:textColor="@color/broom"
            android:textSize="50sp"/>
    </LinearLayout>

</LinearLayout>
